<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MaterialYouLightTheme" parent="LightTheme">
        <item name="appColorMain">@android:color/system_accent1_600</item>
        <item name="appColorPrimaryDark">@android:color/system_neutral1_1000</item>
        <item name="appColorBackground">@android:color/system_neutral1_50</item>
        <item name="appColorForeground">@android:color/system_neutral1_10</item>
        <item name="appColorFrontPrimary">@android:color/system_neutral1_900</item>
        <item name="appColorFrontSecondary">@android:color/system_neutral1_700</item>
        <item name="appColorIcon">?attr/appColorFrontPrimary</item>
        <item name="appColorOnMain">@android:color/white</item>
        <item name="appColorIndicator">@android:color/system_accent1_100</item>
    </style>

    <style name="MaterialYouDarkTheme" parent="DarkTheme">
        <item name="appColorMain">@android:color/system_accent1_200</item>
        <item name="appColorPrimaryDark">@android:color/system_neutral2_1000</item>
        <item name="appColorBackground">@android:color/system_neutral2_900</item>
        <item name="appColorForeground">@android:color/system_neutral2_800</item>
        <item name="appColorFrontPrimary">@android:color/system_neutral2_100</item>
        <item name="appColorFrontSecondary">@android:color/system_neutral2_300</item>
        <item name="appColorIcon">?attr/appColorFrontPrimary</item>
        <item name="appColorOnMain">@android:color/black</item>
        <item name="appColorIndicator">@android:color/system_accent2_600</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowSplashScreenBackground">@color/splashScreenBackgroundColor</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_splash_screen_icon_avd_anim</item>
        <item name="android:windowSplashScreenAnimationDuration">1000</item>
    </style>
</resources>