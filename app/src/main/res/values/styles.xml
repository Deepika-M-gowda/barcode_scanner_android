<resources>

    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.NoActionBar">

    </style>

    <!-- Base application theme. -->
    <style name="LightTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="appMainColor">@color/colorBlueAccent</item>
        <item name="appColorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="appBackgroundColorPrimary">@color/lightBackgroundColorPrimary</item>
        <item name="appBackgroundColorSecondary">@color/lightBackgroundColorSecondary</item>
        <item name="appFrontColorPrimary">@color/lightFrontColorPrimary</item>
        <item name="appFrontColorSecondary">@color/lightFrontColorSecondary</item>

        <item name="colorPrimary">?appBackgroundColorPrimary</item>
        <item name="colorPrimaryDark">?appColorPrimaryDark</item>
        <item name="colorAccent">?appMainColor</item>

        <item name="icon_color">?appFrontColorPrimary</item>

        <item name="colorPositive">@color/light_color_positive</item>
        <item name="colorMedium">@color/light_color_medium</item>
        <item name="colorNegative">@color/light_color_negative</item>
        <item name="colorUnknown">@color/light_color_unknown</item>

        <!-- Background Color -->
        <!--<item name="backgroundColor">@color/lightColorBackground</item>-->
        <item name="android:windowBackground">?appBackgroundColorPrimary</item>
        <item name="cardViewBackgroundColorReference">?appBackgroundColorSecondary</item>
        <item name="activityBackgroundColorReference">?appBackgroundColorPrimary</item>

        <item name="background_entitled_row">?appMainColor</item>
        <item name="background_primary_row">?appBackgroundColorSecondary</item>
        <item name="background_secondary_row">?appBackgroundColorPrimary</item>

        <!-- Text Color -->
        <item name="android:textColorPrimary">?appFrontColorPrimary</item>
        <item name="android:textColor">?appFrontColorPrimary</item>
        <item name="textColor">?appFrontColorPrimary</item>
        <item name="android:textColorSecondary">?appFrontColorSecondary</item>

        <item name="materialButtonStyle">@style/MaterialButton</item>
        <item name="cardViewStyle">@style/CardViewStyle</item>
        <item name="materialCardViewStyle">@style/MaterialCardViewStyle</item>
        <item name="elevationOverlayEnabled">false</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>


        <item name="chipStyle">@style/MaterialChip</item>

        <item name="android:fontFamily">@font/roboto_medium</item>

        <item name="android:datePickerDialogTheme">@style/DateTimePickerTheme</item>
        <item name="android:timePickerDialogTheme">@style/DateTimePickerTheme</item>

        <!--<item name="snackbarStyle">@style/snackBarStyle</item>--> <!-- Permet de changer la SnackBar -->
        <item name="alertDialogTheme">@style/AlertDialogStyle</item>

        <item name="colorControlNormal">?textColor</item>

        <item name="android:statusBarColor">?appColorPrimaryDark</item>
        <item name="android:navigationBarColor">?appColorPrimaryDark</item>

        <item name="android:windowFullscreen">false</item>
    </style>

    <!-- Base application theme. -->
    <style name="DarkTheme" parent="Theme.MaterialComponents.NoActionBar">

        <item name="appMainColor">@color/colorBlueAccent</item>
        <item name="appColorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="appBackgroundColorPrimary">@color/darkBackgroundColorPrimary</item>
        <item name="appBackgroundColorSecondary">@color/darkBackgroundColorSecondary</item>
        <item name="appFrontColorPrimary">@color/darkFrontColorPrimary</item>
        <item name="appFrontColorSecondary">@color/darkFrontColorSecondary</item>

        <item name="colorPrimary">?appBackgroundColorPrimary</item>
        <item name="colorPrimaryDark">?appColorPrimaryDark</item>
        <item name="colorAccent">?appMainColor</item>
        <item name="icon_color">?appFrontColorPrimary</item>

        <item name="colorPositive">@color/dark_color_positive</item>
        <item name="colorMedium">@color/dark_color_medium</item>
        <item name="colorNegative">@color/dark_color_negative</item>
        <item name="colorUnknown">@color/dark_color_unknown</item>

        <!-- Background Color -->
        <!--<item name="backgroundColor">@color/darkColorBackground</item>-->
        <item name="android:windowBackground">?appBackgroundColorPrimary</item>
        <item name="cardViewBackgroundColorReference">?appBackgroundColorSecondary</item>
        <item name="activityBackgroundColorReference">?appBackgroundColorPrimary</item>

        <item name="background_entitled_row">?appMainColor</item>
        <item name="background_primary_row">?appBackgroundColorSecondary</item>
        <item name="background_secondary_row">?appBackgroundColorPrimary</item>

        <!-- Text Color -->
        <item name="android:textColorPrimary">?appFrontColorPrimary</item>
        <item name="android:textColor">?appFrontColorPrimary</item>
        <item name="textColor">?appFrontColorPrimary</item>
        <item name="android:textColorSecondary">?appFrontColorSecondary</item>

        <item name="materialButtonStyle">@style/MaterialButton</item>
        <item name="cardViewStyle">@style/CardViewStyle</item>
        <item name="materialCardViewStyle">@style/MaterialCardViewStyle</item>
        <item name="elevationOverlayEnabled">false</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>


        <item name="chipStyle">@style/MaterialChip</item>

        <item name="android:fontFamily">@font/roboto_medium</item>

        <item name="android:datePickerDialogTheme">@style/DateTimePickerTheme</item>
        <item name="android:timePickerDialogTheme">@style/DateTimePickerTheme</item>

        <!--<item name="snackbarStyle">@style/snackBarStyle</item>--> <!-- Permet de changer la SnackBar -->
        <item name="alertDialogTheme">@style/AlertDialogStyle</item>
        
        <item name="colorControlNormal">?textColor</item>

        <item name="android:statusBarColor">?appColorPrimaryDark</item>
        <item name="android:navigationBarColor">?appColorPrimaryDark</item>

        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="OrangeLightTheme" parent="LightTheme">
        <item name="appMainColor">@color/colorOrangeAccent</item>
    </style>

    <style name="OrangeDarkTheme" parent="DarkTheme">
        <item name="appMainColor">@color/colorOrangeAccent</item>
    </style>

    <style name="BlueLightTheme" parent="LightTheme">
        <item name="appMainColor">@color/colorBlueAccent</item>
    </style>

    <style name="BlueDarkTheme" parent="DarkTheme">
        <item name="appMainColor">@color/colorBlueAccent</item>
    </style>

    <style name="GreenLightTheme" parent="LightTheme">
        <item name="appMainColor">@color/colorGreenAccent</item>
    </style>

    <style name="GreenDarkTheme" parent="DarkTheme">
        <item name="appMainColor">@color/colorGreenAccent</item>
    </style>

    <style name="RedLightTheme" parent="LightTheme">
        <item name="appMainColor">@color/colorRedAccent</item>
    </style>

    <style name="RedDarkTheme" parent="DarkTheme">
        <item name="appMainColor">@color/colorRedAccent</item>
    </style>

    <style name="PurpleLightTheme" parent="LightTheme">
        <item name="appMainColor">@color/colorPurpleAccent</item>
    </style>

    <style name="PurpleDarkTheme" parent="DarkTheme">
        <item name="appMainColor">@color/colorPurpleAccent</item>
    </style>

    <!-- ListPreference -->
    <style name="textAppearanceListItemSecondaryCustom">
        <item name="android:textSize">14sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    
    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">4.0dp</item>
    </style>

    <style name="MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">?colorAccent</item>
        <item name="android:fontFamily">@font/roboto_black</item>
    </style>

    <style name="MaterialChip" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">?appBackgroundColorPrimary</item>
    </style>

    <style name="ChipText" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textColor">?appFrontColorPrimary</item>
        <item name="android:textSize">@dimen/min_text_size</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <!--<item name="android:layout_marginStart">@dimen/standard_margin</item>
        <item name="android:layout_marginEnd">@dimen/standard_margin</item>
        <item name="paddingStart">@dimen/standard_margin</item>
        <item name="paddingEnd">@dimen/standard_margin</item>-->
    </style>

    <!-- CardViewStyle -->

    <style name="CardViewStyle" parent="CardView">
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">@dimen/card_standard_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardBackgroundColor">?appBackgroundColorSecondary</item>
        <item name="android:background">?appBackgroundColorSecondary</item>
    </style>
    <!--  -->

    <style name="MaterialCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">@dimen/card_standard_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="strokeWidth">@dimen/stroke_width</item>

        <item name="cardBackgroundColor">?appBackgroundColorSecondary</item>
        <item name="cardForegroundColor">@android:color/transparent</item>
        <!--<item name="strokeColor">@color/darkMaterialCardViewStrokeColor</item>-->
        <item name="strokeColor">@android:color/transparent</item>
    </style>
    <!--  -->

    <style name="ShapeAppearanceOverlay.MyApp.Button.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- AlertDialog -->
    <style name="AlertDialogStyle" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <!-- Be careful with the android: prefix. AppCompat uses many attributes without it -->

        <item name="colorAccent">?appMainColor</item>
        <item name="android:textColorPrimary">?appFrontColorSecondary</item>
        <item name="android:textColorSecondary">?appFrontColorSecondary</item>
        <item name="android:textSize">@dimen/sub_title_text_size</item>
        <item name="fontFamily">@font/roboto_black</item>
        <item name="textColorAlertDialogListItem">?appFrontColorPrimary</item>
        <item name="colorControlNormal">?appFrontColorPrimary</item>

        <item name="android:windowTitleStyle">@style/AlertDialogTitleTextStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogButtonTextStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogButtonTextStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/AlertDialogButtonTextStyle</item>
        <item name="android:background">?appBackgroundColorSecondary</item>
    </style>

    <style name="AlertDialogTitleTextStyle">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">?appMainColor</item>
        <item name="android:fontFamily">@font/roboto_black</item>
    </style>

    <style name="AlertDialogButtonTextStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textSize">@dimen/standard_text_size</item>
        <item name="android:textColor">?appMainColor</item>
        <item name="android:fontFamily">@font/roboto_black</item>
    </style>

    <!-- TextInputLayout -->
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!--<item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="android:fontFamily">@font/roboto_black</item>-->
        <!--<item name="boxStrokeColor">@color/text_input_box_stroke</item>-->

        <item name="startIconTint" >?android:textColorSecondary</item>

        <!--<item name="startIconTint" >@android:color/white</item>-->
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">

        <!-- Activated -->
        <item name="colorPrimary">?colorAccent</item>

        <!-- Normal -->
        <item name="colorOnSurface">?android:textColorSecondary</item>

        <!-- Error -->
        <item name="colorError">?colorNegative</item>

        <!--<item name="colorControlActivated">@color/colorAccent</item>
        <item name="icon_color">@color/colorAccent</item>
        <item name="iconTint">@color/colorAccent</item>
        <item name="startIconDrawable">@color/colorAccent</item>
        <item name="android:colorActivatedHighlight">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="android:actionModeSelectAllDrawable">@color/colorAccent</item>
        <item name="drawableTint">@color/colorAccent</item>
        <item name="startIconTint">@color/colorAccent</item>-->

        <!-- Text Appearance styles -->
        <item name="textAppearanceSubtitle1">@style/InputEditTextSubTitleFont</item>
        <item name="textAppearanceCaption">@style/InputEditTextCaptionFont</item>

        <!--Note: When setting a materialThemeOverlay on a custom TextInputLayout style, don’t forget to set editTextStyle to either a @style/Widget.MaterialComponents.TextInputEditText.* style or to a custom one that inherits from that.
        The TextInputLayout styles set materialThemeOverlay that overrides editTextStyle with the specific TextInputEditText style needed. Therefore, you don’t need to specify a style tag on the edit text.-->
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox</item>
    </style>

    <style name="InputEditTextCaptionFont">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="textSize">@dimen/min_text_size</item>
        <item name="android:textSize">@dimen/min_text_size</item>
    </style>

    <style name="InputEditTextSubTitleFont">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="textSize">@dimen/sub_title_text_size</item>
        <item name="android:textSize">@dimen/sub_title_text_size</item>
    </style>

    <style name="BottomNavigationViewTextAppearance">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="textSize">@dimen/min_text_size</item>
        <item name="android:textSize">@dimen/min_text_size</item>
