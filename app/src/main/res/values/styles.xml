<resources>

    <!-- Base application theme. -->
    <style name="LightTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/lightColorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorBlueAccent</item>
        <item name="themeColor">@color/colorBlueAccent</item>
        <item name="icon_color">@color/light_icon_color</item>

        <item name="colorPositive">@color/light_color_positive</item>
        <item name="colorMedium">@color/light_color_medium</item>
        <item name="colorNegative">@color/light_color_negative</item>
        <item name="colorUnknown">@color/color_unknown</item>

        <!--<item name="backgroundColor">@color/lightColorBackground</item>-->
        <item name="android:windowBackground">@color/lightColorBackground</item>
        <item name="cardViewBackgroundColorReference">@color/lightColorCardViewBackground</item>
        <item name="activityBackgroundColorReference">@color/lightColorBackground</item>

        <item name="background_entitled_row">?themeColor</item>
        <item name="background_primary_row">@color/light_nutrition_background_primary_color</item>
        <item name="background_secondary_row">@color/light_nutrition_background_secondary_color</item>


        <!-- Text Color -->
        <item name="android:textColorPrimary">@color/lightColorTextPrimary</item>
        <item name="android:textColor">@color/lightColorTextPrimary</item>
        <item name="textColor">@color/lightColorTextPrimary</item>
        <item name="android:textColorSecondary">@color/lightColorTextSecondary</item>

        <item name="materialButtonStyle">@style/MaterialButton</item>
        <item name="cardViewStyle">@style/CardViewLightStyle</item>
        <item name="materialCardViewStyle">@style/MaterialCardViewLightStyle</item>
        <item name="elevationOverlayEnabled">false</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>


        <item name="chipStyle">@style/MaterialChipLight</item>

        <item name="android:fontFamily">@font/roboto_medium</item>

        <item name="android:datePickerDialogTheme">@style/DateTimePickerLightTheme</item>
        <item name="android:timePickerDialogTheme">@style/DateTimePickerLightTheme</item>

        <!--<item name="snackbarStyle">@style/snackBarStyle</item>--> <!-- Permet de changer la SnackBar -->
        <item name="alertDialogTheme">@style/AlertDialogLightStyle</item>

        <item name="colorControlNormal">?textColor</item>

        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
    </style>

    <!-- Base application theme. -->
    <style name="DarkTheme" parent="Theme.MaterialComponents.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/darkColorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorBlueAccent</item>
        <item name="themeColor">@color/colorBlueAccent</item>
        <item name="icon_color">@color/dark_icon_color</item>

        <item name="colorPositive">@color/dark_color_positive</item>
        <item name="colorMedium">@color/dark_color_medium</item>
        <item name="colorNegative">@color/dark_color_negative</item>
        <item name="colorUnknown">@color/color_unknown</item>

        <!--<item name="backgroundColor">@color/darkColorBackground</item>-->
        <item name="android:windowBackground">@color/darkColorBackground</item>
        <item name="cardViewBackgroundColorReference">@color/darkColorCardViewBackground</item>
        <item name="activityBackgroundColorReference">@color/darkColorBackground</item>

        <item name="background_entitled_row">?themeColor</item>
        <item name="background_primary_row">@color/dark_nutrition_background_primary_color</item>
        <item name="background_secondary_row">@color/dark_nutrition_background_secondary_color</item>

        <!-- Text Color -->
        <item name="android:textColorPrimary">@color/darkColorTextPrimary</item>
        <item name="android:textColor">@color/darkColorTextPrimary</item>
        <item name="textColor">@color/darkColorTextPrimary</item>
        <item name="android:textColorSecondary">@color/darkColorTextSecondary</item>

        <item name="materialButtonStyle">@style/MaterialButton</item>
        <item name="cardViewStyle">@style/CardViewDarkStyle</item>
        <item name="materialCardViewStyle">@style/MaterialCardViewDarkStyle</item>
        <item name="elevationOverlayEnabled">false</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
        <!--<item name="snackbarStyle">@style/snackBarStyle</item>--> <!-- Permet de changer la SnackBar -->

        <item name="chipStyle">@style/MaterialChipDark</item>

        <item name="android:fontFamily">@font/roboto_medium</item>

        <item name="android:datePickerDialogTheme">@style/DateTimePickerDarkTheme</item>
        <item name="android:timePickerDialogTheme">@style/DateTimePickerDarkTheme</item>

        <!--<item name="textAppearanceListItemSecondary">@style/textAppearanceListItemSecondaryCustom</item>
        <item name="textAppearanceListItem">@style/textAppearanceListItemSecondaryCustom</item>
        <item name="android:textColorAlertDialogListItem">@color/color_red</item>-->
        <!--<item name="alertDialogStyle">@style/AlertDialogStyle</item>-->
        <item name="alertDialogTheme">@style/AlertDialogDarkStyle</item>
        
        <item name="colorControlNormal">?textColor</item>

        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="OrangeLightTheme" parent="LightTheme">
        <item name="colorAccent">@color/colorOrangeAccent</item>
        <item name="themeColor">@color/colorOrangeAccent</item>
    </style>

    <style name="OrangeDarkTheme" parent="DarkTheme">
        <item name="colorAccent">@color/colorOrangeAccent</item>
        <item name="themeColor">@color/colorOrangeAccent</item>
    </style>

    <style name="BlueLightTheme" parent="LightTheme">
        <item name="colorAccent">@color/colorBlueAccent</item>
        <item name="themeColor">@color/colorBlueAccent</item>
    </style>

    <style name="BlueDarkTheme" parent="DarkTheme">
        <item name="colorAccent">@color/colorBlueAccent</item>
        <item name="themeColor">@color/colorBlueAccent</item>
    </style>

    <style name="GreenLightTheme" parent="LightTheme">
        <item name="colorAccent">@color/colorGreenAccent</item>
        <item name="themeColor">@color/colorGreenAccent</item>
    </style>

    <style name="GreenDarkTheme" parent="DarkTheme">
        <item name="colorAccent">@color/colorGreenAccent</item>
        <item name="themeColor">@color/colorGreenAccent</item>
    </style>

    <style name="RedLightTheme" parent="LightTheme">
        <item name="colorAccent">@color/colorRedAccent</item>
        <item name="themeColor">@color/colorRedAccent</item>
    </style>

    <style name="RedDarkTheme" parent="DarkTheme">
        <item name="colorAccent">@color/colorRedAccent</item>
        <item name="themeColor">@color/colorRedAccent</item>
    </style>

    <style name="PurpleLightTheme" parent="LightTheme">
        <item name="colorAccent">@color/colorPurpleAccent</item>
        <item name="themeColor">@color/colorPurpleAccent</item>
    </style>

    <style name="PurpleDarkTheme" parent="DarkTheme">
        <item name="colorAccent">@color/colorPurpleAccent</item>
        <item name="themeColor">@color/colorPurpleAccent</item>
