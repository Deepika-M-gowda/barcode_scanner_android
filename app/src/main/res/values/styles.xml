<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Toolbar -->
    <style name="ToolBarTextAppearance" parent="TitlePrimaryMaxTextViewAppearance">
        <item name="textSize">@dimen/toolbar_text_size</item>
        <item name="android:textSize">@dimen/toolbar_text_size</item>
    </style>

    <!-- TabLayout -->
    <style name="TabLayoutTextAppearance" parent="TitlePrimaryMaxTextViewAppearance">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- TextView: Title -->
    <style name="TitlePrimaryMaxTextViewAppearance">
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="textSize">@dimen/title_text_size</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="textColor">?android:attr/textColorPrimary</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TitlePrimaryMinTextViewAppearance" parent="TitlePrimaryMaxTextViewAppearance">
        <item name="textSize">@dimen/sub_title_text_size</item>
        <item name="android:textSize">@dimen/sub_title_text_size</item>
    </style>

    <style name="TitleVariantTextViewAppearance" parent="TitlePrimaryMinTextViewAppearance">
        <item name="textColor">?attr/appColorMain</item>
        <item name="android:textColor">?attr/appColorMain</item>
    </style>

    <!-- TextView: Subtitle -->
    <style name="SubtitleSecondaryTextViewAppearance" parent="StandardSecondaryTextViewAppearance">
        <item name="textSize">@dimen/sub_title_text_size</item>
        <item name="android:textSize">@dimen/sub_title_text_size</item>
    </style>

    <!-- TextView: Standard Text -->
    <style name="StandardPrimaryTextViewAppearance">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="textSize">@dimen/standard_text_size</item>
        <item name="android:textSize">@dimen/standard_text_size</item>
        <item name="textColor">?android:attr/textColorPrimary</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="StandardPrimaryItalicTextViewAppearance" parent="StandardPrimaryTextViewAppearance">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="StandardSecondaryTextViewAppearance" parent="StandardPrimaryTextViewAppearance">
        <item name="textColor">?android:attr/textColorSecondary</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="StandardSecondaryItalicTextViewAppearance" parent="StandardSecondaryTextViewAppearance">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ErrorRedTextViewTheme" parent="StandardPrimaryTextViewAppearance">
        <item name="android:textColor">?colorNegative</item>
    </style>

    <!-- CardView -->
    <style name="CardViewStyle" parent="CardView">
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">@dimen/card_standard_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardBackgroundColor">?attr/appColorForeground</item>
        <item name="android:background">?attr/appColorForeground</item>
    </style>

    <style name="MaterialCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">@dimen/card_standard_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="strokeWidth">@dimen/stroke_width</item>

        <item name="cardBackgroundColor">?attr/appColorForeground</item>
        <item name="cardForegroundColor">@android:color/transparent</item>
        <!--<item name="strokeColor">@color/darkMaterialCardViewStrokeColor</item>-->
        <item name="strokeColor">@android:color/transparent</item>
    </style>

    <!-- BottomNavigationView -->
    <style name="BottomNavigationViewStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundColor">?attr/appColorBackground</item>
        <item name="android:background">?attr/appColorBackground</item>
        <item name="itemActiveIndicatorStyle">@style/BottomNavigationViewActiveIndicatorStyle</item>
    </style>

    <style name="BottomNavigationViewActiveIndicatorStyle" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">?attr/appColorIndicator</item>
    </style>

    <!-- NavigationRailView -->
    <style name="RailNavigationViewStyle" parent="Widget.Material3.NavigationRailView">
        <item name="backgroundColor">?attr/appColorBackground</item>
        <item name="android:background">?attr/appColorBackground</item>
        <item name="itemActiveIndicatorStyle">@style/NavigationRailViewActiveIndicatorStyle</item>
    </style>

    <style name="NavigationRailViewActiveIndicatorStyle" parent="Widget.Material3.NavigationRailView.ActiveIndicator">
        <item name="android:color">?attr/appColorIndicator</item>
    </style>

    <!-- Slider -->
    <style name="Slider" parent="Widget.Material3.Slider">
        <item name="thumbColor">?attr/appColorMain</item>
        <item name="trackColor">?attr/appColorIndicator</item>
        <item name="haloColor">?attr/appColorIndicator</item>
    </style>

    <!-- Switch -->
    <style name="SwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <!--<item name="thumbTint">?appMainColor</item>
        <item name="trackTint">?appIndicatorColor</item>-->
    </style>

    <!-- Chip -->
    <style name="MaterialChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">?attr/appColorIndicator</item>
    </style>

    <style name="ChipText" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textColor">?attr/appColorFrontPrimary</item>
        <item name="android:textSize">@dimen/min_text_size</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- TextInputLayout -->
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!--<item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="android:fontFamily">@font/roboto_black</item>-->
        <!--<item name="boxStrokeColor">@color/text_input_box_stroke</item>-->

        <item name="startIconTint" >?android:textColorSecondary</item>

        <!--<item name="startIconTint" >@android:color/white</item>-->
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">

        <!-- Activated -->
        <item name="colorPrimary">?colorAccent</item>

        <!-- Normal -->
        <item name="colorOnSurface">?android:textColorSecondary</item>

        <!-- Error -->
        <item name="colorError">?colorNegative</item>

        <!--<item name="colorControlActivated">@color/colorAccent</item>
        <item name="icon_color">@color/colorAccent</item>
        <item name="iconTint">@color/colorAccent</item>
        <item name="startIconDrawable">@color/colorAccent</item>
        <item name="android:colorActivatedHighlight">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="android:actionModeSelectAllDrawable">@color/colorAccent</item>
        <item name="drawableTint">@color/colorAccent</item>
        <item name="startIconTint">@color/colorAccent</item>-->

        <!-- Text Appearance styles -->
        <item name="textAppearanceSubtitle1">@style/SubtitleSecondaryTextViewAppearance</item>
        <item name="textAppearanceCaption">@style/InputEditTextCaptionFont</item>

        <!--Note: When setting a materialThemeOverlay on a custom TextInputLayout style, don’t forget to set editTextStyle to either a @style/Widget.MaterialComponents.TextInputEditText.* style or to a custom one that inherits from that.
        The TextInputLayout styles set materialThemeOverlay that overrides editTextStyle with the specific TextInputEditText style needed. Therefore, you don’t need to specify a style tag on the edit text.-->
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox</item>
    </style>

    <style name="InputEditTextCaptionFont">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="textSize">@dimen/min_text_size</item>
        <item name="android:textSize">@dimen/min_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AutoCompleteTextViewTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="materialThemeOverlay">@style/AutoCompleteTextViewTextInputLayoutThemeOverlay</item>
    </style>

    <style name="AutoCompleteTextViewTextInputLayoutThemeOverlay" parent="">

        <item name="colorPrimary">?colorAccent</item>

        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="textSize">@dimen/standard_text_size</item>
        <item name="android:textSize">@dimen/standard_text_size</item>
        <item name="android:textStyle">normal</item>

        <item name="autoCompleteTextViewStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu</item>
    </style>

    <style name="RadioButtonTheme">
        <item name="colorControlNormal">?attr/appColorIcon</item>
        <item name="colorControlActivated">?attr/appColorMain</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="textSize">@dimen/standard_text_size</item>
        <item name="android:textSize">@dimen/standard_text_size</item>
        <item name="textColor">?android:attr/textColorPrimary</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Material Button -->
    <style name="MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?attr/appColorOnMain</item>
        <item name="backgroundTint">?colorAccent</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- DialogTextButtonStyle -->
    <style name="DialogTextButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textSize">@dimen/standard_text_size</item>
        <item name="android:textColor">?attr/appColorMain</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- AlertDialog -->
    <style name="AlertDialogStyle" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <!-- Be careful with the android: prefix. AppCompat uses many attributes without it -->

        <item name="colorAccent">?attr/appColorMain</item>
        <item name="android:textColorPrimary">?attr/appColorFrontSecondary</item>
        <item name="android:textColorSecondary">?attr/appColorFrontSecondary</item>
        <item name="android:textSize">@dimen/sub_title_text_size</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textStyle">normal</item>
        <item name="textColorAlertDialogListItem">?attr/appColorFrontPrimary</item>
        <item name="colorControlNormal">?attr/appColorFrontPrimary</item>

        <item name="android:windowTitleStyle">@style/TitleVariantTextViewAppearance</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogTextButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogTextButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/DialogTextButtonStyle</item>
        <item name="android:background">?attr/appColorForeground</item>
    </style>

    <!-- DateTimePicker -->
    <style name="DateTimePickerTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowBackground">?attr/appColorForeground</item>
        <item name="android:datePickerStyle">@style/DatePickerTheme</item>
        <item name="android:timePickerStyle">@style/TimePickerTheme</item>

        <item name="android:buttonBarPositiveButtonStyle">@style/DialogTextButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DialogTextButtonStyle</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/DialogTextButtonStyle</item>
    </style>

    <style name="DatePickerTheme" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:numbersBackgroundColor">?attr/appColorBackground</item>
        <item name="android:numbersSelectorColor">?attr/appColorMain</item>
    </style>

    <style name="TimePickerTheme" parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="android:numbersBackgroundColor">?attr/appColorBackground</item>
        <item name="android:numbersSelectorColor">?attr/appColorMain</item>
    </style>

    <!-- Overflow Menu -->
    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">4.0dp</item>
    </style>

</resources>
