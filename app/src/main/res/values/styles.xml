        <item name="textSize">@dimen/title_text_size</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="ToolBarTextAppearance">
        <item name="fontFamily">@font/roboto_black</item>
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="textSize">@dimen/toolbar_text_size</item>
        <item name="android:textSize">@dimen/toolbar_text_size</item>
    </style>

    <style name="ErrorTextViewTheme" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textSize">@dimen/standard_text_size</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="DateTimePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">?appBackgroundColorSecondary</item>
        <item name="android:timePickerStyle">@style/TimePickerTheme</item>

        <item name="android:textColor">?appFrontColorPrimary</item>
        <item name="android:textColorPrimary">?appFrontColorPrimary</item>
        <item name="android:textColorSecondary">?appFrontColorSecondary</item>

        <item name="colorAccent">?appMainColor</item>
        <item name="android:colorAccent">?appMainColor</item>
        <item name="android:colorPrimary">?appMainColor</item>
        <item name="android:colorPrimaryDark">?appMainColor</item>

        <item name="android:buttonBarPositiveButtonStyle">@style/AppCompatAlertDialogButtonTextStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/AppCompatAlertDialogButtonTextStyle</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/AppCompatAlertDialogButtonTextStyle</item>
    </style>

    <style name="TimePickerTheme" parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="android:numbersBackgroundColor">?appBackgroundColorPrimary</item>
        <item name="android:numbersSelectorColor">?appMainColor</item>
    </style>

    <style name="DatePickerTheme.ButtonBarNegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?appMainColor</item>
    </style>

    <style name="AppCompatAlertDialogButtonTextStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textSize">@dimen/standard_text_size</item>
        <item name="android:textColor">?appMainColor</item>
        <item name="android:fontFamily">@font/roboto_black</item>
    </style>


