<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/template_warning_view_information_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/StandardSecondaryItalicTextViewAppearance"/>

    <RelativeLayout
        android:id="@+id/template_warning_view_error_message_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_margin"
        android:layout_below="@id/template_warning_view_information_text_view">

        <TextView
            android:id="@+id/template_warning_view_error_message_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/scan_error_message_label"
            style="@style/StandardPrimaryTextViewAppearance"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/template_warning_view_error_message_label"
            android:layout_marginTop="@dimen/light_margin"
            android:padding="@dimen/standard_margin"
            android:background="?android:windowBackground">

            <TextView
                android:id="@+id/template_warning_view_error_message_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/StandardSecondaryItalicTextViewAppearance"/>
        </FrameLayout>

    </RelativeLayout>
</RelativeLayout>