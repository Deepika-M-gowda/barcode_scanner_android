<?xml version="1.0" encoding="utf-8"?>
<com.atharok.barcodescanner.presentation.customView.ExpandableView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/template_expandable_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/standard_margin"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    app:open="true"
    app:iconHeaderId="@id/template_expandable_view_header_icon_image_view">

    <!-- Header -->
    <RelativeLayout
        android:id="@+id/template_expandable_view_header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/standard_margin">

        <FrameLayout
            android:id="@+id/template_expandable_view_header_frame_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/template_expandable_view_header_icon_image_view"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/template_expandable_view_header_icon_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/standard_margin"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_keyboard_arrow_down_24"
            android:contentDescription="@string/image_view_description_icon" />

    </RelativeLayout>

    <!-- Body -->
    <FrameLayout
        android:id="@+id/template_expandable_view_body_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/standard_margin"
        android:layout_below="@id/template_expandable_view_header_layout" />

</com.atharok.barcodescanner.presentation.customView.ExpandableView>