<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/template_entitled_view_icon_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/standard_margin"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        app:tint="?android:textColorPrimary"
        android:contentDescription="@string/image_view_description_icon" />

    <include
        layout="@layout/template_text_view_title"
        android:id="@+id/template_entitled_view_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/template_entitled_view_icon_image_view"
        android:layout_centerVertical="true" />

</RelativeLayout>