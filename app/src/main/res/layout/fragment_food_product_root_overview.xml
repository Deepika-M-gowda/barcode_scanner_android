<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.views.fragments.barcodeAnalysis.product.foodProduct.overview.FoodProductRootOverviewFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/standard_margin"
        android:paddingEnd="@dimen/standard_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:id="@+id/food_root_overview_outer_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_fab_button">

            <!-- Product Overview -->
            <FrameLayout
                android:id="@+id/food_root_overview_overview_frame_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Ingredients Analysis (Veggie and Palm Oil) -->
            <FrameLayout
                android:id="@+id/food_root_overview_veggie_analysis_frame_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/food_root_overview_overview_frame_layout"/>

            <!-- Product Quality -->
            <FrameLayout
                android:id="@+id/food_root_overview_quality_entitled_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/food_root_overview_veggie_analysis_frame_layout">

                <include
                    layout="@layout/template_text_view_subtitle"
                    android:id="@+id/food_root_overview_quality_entitled_text_view_template"
                    />

            </FrameLayout>

            <!-- NutriScore -->
            <FrameLayout
                android:id="@+id/food_root_overview_quality_nutri_score_frame_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/food_root_overview_quality_entitled_layout"/>

            <!-- Nova Group -->
            <FrameLayout
                android:id="@+id/food_root_overview_quality_nova_group_frame_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/food_root_overview_quality_nutri_score_frame_layout"/>

            <!-- EcoScore -->
            <FrameLayout
                android:id="@+id/food_root_overview_quality_eco_score_frame_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/food_root_overview_quality_nova_group_frame_layout"/>

            <FrameLayout
                android:id="@+id/food_root_overview_details_entitled_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@id/food_root_overview_quality_eco_score_frame_layout">

                <include
                    layout="@layout/template_text_view_subtitle"
                    android:id="@+id/food_root_overview_details_entitled_text_view_template"
                    />

            </FrameLayout>

            <!-- Product Labels -->
            <FrameLayout
                android:id="@+id/food_root_overview_labels_frame_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/food_root_overview_details_entitled_layout"/>

            <!-- Product Details -->
            <FrameLayout
                android:id="@+id/food_root_overview_details_frame_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/food_root_overview_labels_frame_layout"/>

            <!-- About Barcode -->

            <FrameLayout
                android:id="@+id/food_root_overview_about_barcode_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@id/food_root_overview_details_frame_layout">

                <include
                    layout="@layout/template_text_view_subtitle"
                    android:id="@+id/food_root_overview_about_barcode_entitled_text_view_template"
                    />

            </FrameLayout>

            <!-- Barcode Contents -->
            <FrameLayout
                android:id="@+id/food_root_overview_barcode_contents_frame_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/food_root_overview_about_barcode_layout"/>

            <!-- Barcode Information -->
            <FrameLayout
                android:id="@+id/food_root_overview_about_barcode_frame_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/food_root_overview_barcode_contents_frame_layout"/>

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>