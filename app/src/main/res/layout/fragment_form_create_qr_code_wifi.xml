<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.views.fragments.barcodeCreatorForms.forms.FormCreateQrCodeWifiFragment">

    <com.atharok.barcodescanner.presentation.customView.CustomTextInputLayout
        android:id="@+id/fragment_form_create_qr_code_wifi_ssid_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:hint="@string/qr_code_text_input_edit_text_hint_wifi_ssid"
        app:startIconDrawable="@drawable/baseline_text_fields_24"
        app:startIconTintFocused="?colorAccent"
        style="@style/TextInputLayoutStyle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/fragment_form_create_qr_code_wifi_ssid_input_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:imeOptions="actionNext"
            android:nextFocusForward="@id/fragment_form_create_qr_code_wifi_password_input_edit_text"
            />

    </com.atharok.barcodescanner.presentation.customView.CustomTextInputLayout>

    <com.atharok.barcodescanner.presentation.customView.CustomTextInputLayout
        android:id="@+id/fragment_form_create_qr_code_wifi_password_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/fragment_form_create_qr_code_wifi_ssid_input_layout"
        android:hint="@string/qr_code_text_input_edit_text_hint_wifi_password"
        app:startIconDrawable="@drawable/baseline_text_fields_24"
        app:startIconTintFocused="?colorAccent"
        style="@style/TextInputLayoutStyle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/fragment_form_create_qr_code_wifi_password_input_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:imeOptions="actionDone"
            />

    </com.atharok.barcodescanner.presentation.customView.CustomTextInputLayout>

    <Spinner
        android:id="@+id/fragment_form_create_qr_code_wifi_encryption_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_form_create_qr_code_wifi_password_input_layout" />

    <CheckBox
        android:id="@+id/fragment_form_create_qr_code_wifi_hide_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_form_create_qr_code_wifi_encryption_spinner"
        android:text="@string/qr_code_text_input_edit_text_hint_wifi_hide"
        android:textSize="@dimen/standard_text_size"
        android:fontFamily="@font/roboto_medium"/>

</RelativeLayout>