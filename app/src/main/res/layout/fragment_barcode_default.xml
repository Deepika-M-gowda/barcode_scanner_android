<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/standard_margin"
    android:paddingEnd="@dimen/standard_margin"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".presentation.views.fragments.barcodeAnalysis.defaultBarcode.root.BarcodeDefaultFragment">

    <RelativeLayout
        android:id="@+id/fragment_barcode_default_outer_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/space_fab_button">

        <!-- Product Information API -->

        <FrameLayout
            android:id="@+id/fragment_barcode_default_product_search_api_entitled_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <include
                layout="@layout/template_text_view_subtitle"
                android:id="@+id/fragment_barcode_default_product_search_api_entitled_text_view_template"
                />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/fragment_barcode_default_product_search_api_frame_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_barcode_default_product_search_api_entitled_layout"/>

        <!-- About Barcode -->

        <FrameLayout
            android:id="@+id/fragment_barcode_default_about_barcode_entitled_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_barcode_default_product_search_api_frame_layout">

            <include
                layout="@layout/template_text_view_subtitle"
                android:id="@+id/fragment_barcode_default_about_barcode_entitled_text_view_template"
                />

        </FrameLayout>

        <!-- Barcode Contents -->
        <FrameLayout
            android:id="@+id/fragment_barcode_default_barcode_contents_frame_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_barcode_default_about_barcode_entitled_layout"/>

        <!-- Barcode Information -->
        <FrameLayout
            android:id="@+id/fragment_barcode_default_about_barcode_frame_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_barcode_default_barcode_contents_frame_layout"/>

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>