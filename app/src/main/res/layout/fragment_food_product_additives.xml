<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".presentation.views.fragments.barcodeAnalysis.product.foodProduct.ingredients.FoodProductAdditivesFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/additives_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:visibility="gone">

        <include
            layout="@layout/template_expandable_view"
            android:id="@+id/additives_expandable_view_template"/>

    </com.google.android.material.card.MaterialCardView>

    <ProgressBar
        android:id="@+id/additives_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/standard_margin"
        android:layout_below="@id/additives_card_view"/>
</RelativeLayout>