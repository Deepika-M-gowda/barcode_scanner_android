<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/template_product_quality_texts_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/template_product_quality_image_view"
        android:layout_centerVertical="true">

        <!-- Title -->
        <TextView
            android:id="@+id/template_product_quality_entitled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_text_size"
            android:fontFamily="@font/roboto_black"/>

        <!-- Description -->
        <TextView
            android:id="@+id/template_product_quality_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/template_product_quality_entitled"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="@dimen/standard_text_size"
            android:fontFamily="@font/roboto_medium"/>

    </RelativeLayout>

    <!-- Image -->
    <ImageView
        android:id="@+id/template_product_quality_image_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/image_label_max_height"
        android:layout_marginStart="@dimen/standard_margin"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/image_view_description_image" />

</RelativeLayout>