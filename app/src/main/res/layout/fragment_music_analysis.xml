<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/standard_margin"
    android:paddingEnd="@dimen/standard_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".presentation.views.fragments.barcodeAnalysis.product.musicProduct.MusicAnalysisFragment">

    <RelativeLayout
        android:id="@+id/fragment_music_analysis_outer_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Overview -->

        <FrameLayout
            android:id="@+id/fragment_music_analysis_overview_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" />

        <!-- Tracks -->

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/fragment_music_analysis_tracks_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_music_analysis_overview_layout"
            android:visibility="gone">

            <include
                android:id="@+id/fragment_music_analysis_tracks_expandable_layout"
                layout="@layout/template_expandable_view" />

        </com.google.android.material.card.MaterialCardView>

        <!-- About Barcode -->

        <FrameLayout
            android:id="@+id/fragment_music_analysis_about_barcode_frame_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_music_analysis_tracks_card_view" />

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>