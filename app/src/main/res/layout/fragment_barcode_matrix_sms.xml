<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".presentation.views.fragments.barcodeAnalysis.defaultBarcode.matrix.BarcodeMatrixSmsFragment">

    <!-- Phone Number -->
    <RelativeLayout
        android:id="@+id/fragment_barcode_matrix_sms_number_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fragment_barcode_matrix_sms_number_label"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:fontFamily="@font/roboto_black"
            android:text="@string/matrix_phone_tel_number_label"
            android:textColor="?colorAccent"
            android:textSize="@dimen/sub_title_text_size" />

        <TextView
            android:id="@+id/fragment_barcode_matrix_sms_number_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_below="@id/fragment_barcode_matrix_sms_number_label"

            android:fontFamily="@font/roboto_medium_italic"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="@dimen/standard_text_size" />
    </RelativeLayout>

    <!-- Subject -->
    <RelativeLayout
        android:id="@+id/fragment_barcode_matrix_sms_subject_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x_large_margin"
        android:layout_below="@id/fragment_barcode_matrix_sms_number_layout">

        <TextView
            android:id="@+id/fragment_barcode_matrix_sms_subject_label"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:fontFamily="@font/roboto_black"
            android:text="@string/matrix_subject_label"
            android:textColor="?colorAccent"
            android:textSize="@dimen/sub_title_text_size" />

        <TextView
            android:id="@+id/fragment_barcode_matrix_sms_subject_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_below="@id/fragment_barcode_matrix_sms_subject_label"

            android:fontFamily="@font/roboto_medium_italic"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="@dimen/standard_text_size" />
    </RelativeLayout>

    <!-- Body -->
    <RelativeLayout
        android:id="@+id/fragment_barcode_matrix_sms_body_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x_large_margin"
        android:layout_below="@id/fragment_barcode_matrix_sms_subject_layout">

        <TextView
            android:id="@+id/fragment_barcode_matrix_sms_body_label"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:fontFamily="@font/roboto_black"
            android:text="@string/matrix_body_label"
            android:textColor="?colorAccent"
            android:textSize="@dimen/sub_title_text_size" />

        <TextView
            android:id="@+id/fragment_barcode_matrix_sms_body_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_below="@id/fragment_barcode_matrix_sms_body_label"

            android:fontFamily="@font/roboto_medium_italic"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="@dimen/standard_text_size" />
    </RelativeLayout>

</RelativeLayout>