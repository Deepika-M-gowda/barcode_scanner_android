<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/template_nutrient_level_entitled_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/template_nutrient_nutrient_level_entitled_right"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/template_nutrient_level_entitled_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_text_size"
            android:fontFamily="@font/roboto_black"
            />

        <TextView
            android:id="@+id/template_nutrient_level_sub_entitled_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/template_nutrient_level_entitled_text_view"
            android:textColor="?android:textColorSecondary"
            android:textSize="@dimen/standard_text_size"
            android:fontFamily="@font/roboto_medium"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/template_nutrient_nutrient_level_entitled_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/template_nutrient_level_quantity_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sub_title_text_size"
            android:fontFamily="@font/roboto_black"
            />

        <ImageView
            android:id="@+id/template_nutrient_level_indicator_image_view"
            android:layout_width="@dimen/image_risk_indicator_size"
            android:layout_height="@dimen/image_risk_indicator_size"
            android:layout_margin="@dimen/standard_margin"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/template_nutrient_level_quantity_text_view"
            android:src="@drawable/circle"
            android:contentDescription="@string/image_view_description_icon" />

    </RelativeLayout>

</RelativeLayout>