<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56sp">

    <RelativeLayout
        android:id="@+id/recycler_view_item_history_background_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/recycler_view_item_history_delete_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/recycler_view_item_history_delete_icon_image_view"
            android:text="@string/delete_label"
            android:textSize="@dimen/sub_title_text_size"
            android:fontFamily="@font/roboto_black"/>

        <ImageView
            android:id="@+id/recycler_view_item_history_delete_icon_image_view"
            android:layout_width="@dimen/icon_standard_size"
            android:layout_height="@dimen/icon_standard_size"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/standard_margin"
            android:src="@drawable/baseline_delete_forever_24"
            android:contentDescription="@string/image_view_description_icon" />

    </RelativeLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/recycler_view_item_history_foreground_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="?attr/cardViewBackgroundColorReference"
        app:cardCornerRadius="28sp"
        app:cardUseCompatPadding="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/standard_margin">

            <ImageView
                android:id="@+id/recycler_view_item_history_image_view"
                android:layout_width="@dimen/icon_large_size"
                android:layout_height="@dimen/icon_large_size"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/light_margin"
                app:tint="@android:color/white"
                android:background="@drawable/circle"
                app:backgroundTint="?colorAccent"
                android:contentDescription="@string/image_view_description_type_icon"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/recycler_view_item_history_image_view"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/standard_margin"
                android:layout_marginEnd="@dimen/light_margin">

                <RelativeLayout
                    android:id="@+id/recycler_view_item_history_title_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/light_margin">

                    <TextView
                        android:id="@+id/recycler_view_item_history_entitled_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@id/recycler_view_item_history_origin_flag_image_view"
                        android:layout_marginEnd="@dimen/standard_margin"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:fontFamily="@font/roboto_black"
                        android:textSize="@dimen/sub_title_text_size"
                        android:textColor="?android:textColorPrimary"
                        />

                    <ImageView
                        android:id="@+id/recycler_view_item_history_origin_flag_image_view"
                        android:layout_width="@dimen/icon_light_size"
                        android:layout_height="@dimen/icon_light_size"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@id/recycler_view_item_history_bar_code_icon_image_view"
                        android:layout_marginEnd="@dimen/standard_margin"
                        android:contentDescription="@string/image_view_description_flag" />

                    <ImageView
                        android:id="@+id/recycler_view_item_history_bar_code_icon_image_view"
                        android:layout_width="@dimen/icon_light_size"
                        android:layout_height="@dimen/icon_light_size"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        app:tint="?icon_color"
                        android:contentDescription="@string/image_view_description_bar_code" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/recycler_view_item_history_title_layout"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/light_margin">

                    <TextView
                        android:id="@+id/recycler_view_item_history_content_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@id/recycler_view_item_history_date_image_view"
                        android:layout_marginEnd="@dimen/standard_margin"

                        android:ellipsize="end"
                        android:maxLines="1"

                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="@dimen/standard_text_size"
                        android:fontFamily="@font/roboto_medium_italic" />

                    <ImageView
                        android:id="@+id/recycler_view_item_history_date_image_view"
                        android:layout_width="@dimen/icon_standard_size"
                        android:layout_height="@dimen/icon_standard_size"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@id/recycler_view_item_history_date_text_view"
                        android:src="@drawable/baseline_history_24"
                        app:tint="?android:attr/textColorSecondary"
                        android:contentDescription="@string/image_view_description_icon" />

                    <TextView
                        android:id="@+id/recycler_view_item_history_date_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/light_margin"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="@dimen/standard_text_size"
                        android:fontFamily="@font/roboto_medium" />

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

</FrameLayout>