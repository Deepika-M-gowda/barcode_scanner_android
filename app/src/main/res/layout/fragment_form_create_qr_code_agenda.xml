<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.views.fragments.barcodeCreatorForms.FormCreateQrCodeAgendaFragment">

    <com.atharok.barcodescanner.presentation.customView.CustomTextInputLayout
        android:id="@+id/fragment_form_create_qr_code_agenda_summary_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/qr_code_text_input_edit_text_hint_agenda_event_name"
        app:startIconDrawable="@drawable/baseline_text_fields_24"
        app:startIconTintFocused="?colorAccent"
        style="@style/TextInputLayoutStyle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/fragment_form_create_qr_code_agenda_summary_input_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:imeOptions="actionNext"
            android:nextFocusForward="@id/fragment_form_create_qr_code_agenda_place_input_edit_text"
            />

    </com.atharok.barcodescanner.presentation.customView.CustomTextInputLayout>

    <RelativeLayout
        android:id="@+id/fragment_form_create_qr_code_agenda_begin_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_form_create_qr_code_agenda_summary_input_layout">

        <TextView
            android:id="@+id/fragment_form_create_qr_code_agenda_begin_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/standard_margin"

            android:text="@string/begin_label"
            android:textSize="@dimen/standard_text_size"
            android:fontFamily="@font/roboto_medium" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_form_create_qr_code_agenda_begin_label">

            <TextView
                android:id="@+id/fragment_form_create_qr_code_agenda_begin_date_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/standard_margin"
                android:textSize="@dimen/standard_text_size"
                android:fontFamily="@font/roboto_black"/>

            <TextView
                android:id="@+id/fragment_form_create_qr_code_agenda_begin_time_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/standard_margin"
                android:textSize="@dimen/standard_text_size"
                android:layout_toEndOf="@id/fragment_form_create_qr_code_agenda_begin_date_picker"
                android:fontFamily="@font/roboto_black" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fragment_form_create_qr_code_agenda_end_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_form_create_qr_code_agenda_begin_layout">

        <TextView
            android:id="@+id/fragment_form_create_qr_code_agenda_end_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/standard_margin"

            android:text="@string/end_label"
            android:textSize="@dimen/standard_text_size"
            android:fontFamily="@font/roboto_medium" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_form_create_qr_code_agenda_end_label">

            <TextView
                android:id="@+id/fragment_form_create_qr_code_agenda_end_date_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/standard_margin"
                android:textSize="@dimen/standard_text_size"
                android:fontFamily="@font/roboto_black"/>

            <TextView
                android:id="@+id/fragment_form_create_qr_code_agenda_end_time_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/standard_margin"
                android:layout_toEndOf="@id/fragment_form_create_qr_code_agenda_end_date_picker"
                android:textSize="@dimen/standard_text_size"
                android:fontFamily="@font/roboto_black" />

        </RelativeLayout>

    </RelativeLayout>

    <CheckBox
        android:id="@+id/fragment_form_create_qr_code_agenda_all_of_day_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_form_create_qr_code_agenda_end_layout"
        android:text="@string/check_box_event_all_of_day"
        android:textSize="@dimen/standard_text_size"
        android:fontFamily="@font/roboto_medium"/>

    <com.atharok.barcodescanner.presentation.customView.CustomTextInputLayout
        android:id="@+id/fragment_form_create_qr_code_agenda_place_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/fragment_form_create_qr_code_agenda_all_of_day_check_box"
        android:hint="@string/qr_code_text_input_edit_text_hint_agenda_place"
        app:startIconDrawable="@drawable/baseline_place_24"
        app:startIconTintFocused="?colorAccent"
        style="@style/TextInputLayoutStyle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/fragment_form_create_qr_code_agenda_place_input_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:imeOptions="actionNext"
            android:nextFocusForward="@id/fragment_form_create_qr_code_agenda_description_input_edit_text"
            />

    </com.atharok.barcodescanner.presentation.customView.CustomTextInputLayout>

    <com.atharok.barcodescanner.presentation.customView.CustomTextInputLayout
        android:id="@+id/fragment_form_create_qr_code_agenda_description_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/fragment_form_create_qr_code_agenda_place_input_layout"
        android:hint="@string/qr_code_text_input_edit_text_hint_agenda_description"
        app:startIconDrawable="@drawable/baseline_text_fields_24"
        app:startIconTintFocused="?colorAccent"
        style="@style/TextInputLayoutStyle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/fragment_form_create_qr_code_agenda_description_input_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:imeOptions="actionDone"
            android:gravity="top|start"
            />

    </com.atharok.barcodescanner.presentation.customView.CustomTextInputLayout>

</RelativeLayout>