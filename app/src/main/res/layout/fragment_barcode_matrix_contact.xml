<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".presentation.views.fragments.barcodeAnalysis.defaultBarcode.matrix.BarcodeMatrixContactFragment">

    <!-- Name -->
    <RelativeLayout
        android:id="@+id/fragment_barcode_matrix_contact_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fragment_barcode_matrix_contact_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/roboto_black"
            android:text="@string/matrix_contact_name_label"
            android:textColor="?colorAccent"
            android:textSize="@dimen/sub_title_text_size" />

        <TextView
            android:id="@+id/fragment_barcode_matrix_contact_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@id/fragment_barcode_matrix_contact_name_label"
            android:fontFamily="@font/roboto_medium_italic"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="@dimen/standard_text_size" />
    </RelativeLayout>

    <!-- Organization -->
    <RelativeLayout
        android:id="@+id/fragment_barcode_matrix_contact_organization_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x_large_margin"
        android:layout_below="@id/fragment_barcode_matrix_contact_name_layout">

        <TextView
            android:id="@+id/fragment_barcode_matrix_contact_organization_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/roboto_black"
            android:text="@string/matrix_contact_organisation_label"
            android:textColor="?colorAccent"
            android:textSize="@dimen/sub_title_text_size" />

        <TextView
            android:id="@+id/fragment_barcode_matrix_contact_organization_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@id/fragment_barcode_matrix_contact_organization_label"

            android:fontFamily="@font/roboto_medium_italic"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="@dimen/standard_text_size" />
    </RelativeLayout>

    <!-- Contact -->
    <RelativeLayout
        android:id="@+id/fragment_barcode_matrix_contact_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x_large_margin"
        android:layout_below="@id/fragment_barcode_matrix_contact_organization_layout">

        <TextView
            android:id="@+id/fragment_barcode_matrix_contact_title_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/roboto_black"
            android:text="@string/matrix_contact_title_label"
            android:textColor="?colorAccent"
            android:textSize="@dimen/sub_title_text_size" />

        <TextView
            android:id="@+id/fragment_barcode_matrix_contact_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@id/fragment_barcode_matrix_contact_title_label"

            android:fontFamily="@font/roboto_medium_italic"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="@dimen/standard_text_size" />
    </RelativeLayout>

    <!-- Phone -->
    <RelativeLayout
        android:id="@+id/fragment_barcode_matrix_contact_phone_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x_large_margin"
        android:layout_below="@id/fragment_barcode_matrix_contact_title_layout">

        <TextView
            android:id="@+id/fragment_barcode_matrix_contact_phone_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/roboto_black"
            android:text="@string/matrix_contact_phone_label"
            android:textColor="?colorAccent"
            android:textSize="@dimen/sub_title_text_size" />

        <!-- Phone 1 -->
        <RelativeLayout
            android:id="@+id/fragment_barcode_matrix_contact_phone_1_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_barcode_matrix_contact_phone_label">

            <TextView
                android:id="@+id/fragment_barcode_matrix_contact_phone_1_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginEnd="@dimen/light_margin"

                android:fontFamily="@font/roboto_medium_italic"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="@dimen/standard_text_size" />

            <TextView
                android:id="@+id/fragment_barcode_matrix_contact_phone_type_1_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_toEndOf="@id/fragment_barcode_matrix_contact_phone_1_text_view"

                android:fontFamily="@font/roboto_medium_italic"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="@dimen/standard_text_size" />

        </RelativeLayout>

        <!-- Phone 2 -->
        <RelativeLayout
            android:id="@+id/fragment_barcode_matrix_contact_phone_2_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_barcode_matrix_contact_phone_1_layout">

            <TextView
                android:id="@+id/fragment_barcode_matrix_contact_phone_2_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginEnd="@dimen/light_margin"

                android:fontFamily="@font/roboto_medium_italic"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="@dimen/standard_text_size" />

            <TextView
                android:id="@+id/fragment_barcode_matrix_contact_phone_type_2_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_toEndOf="@id/fragment_barcode_matrix_contact_phone_2_text_view"

                android:fontFamily="@font/roboto_medium_italic"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="@dimen/standard_text_size" />

        </RelativeLayout>

        <!-- Phone 3 -->
        <RelativeLayout
            android:id="@+id/fragment_barcode_matrix_contact_phone_3_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_barcode_matrix_contact_phone_2_layout">

            <TextView
                android:id="@+id/fragment_barcode_matrix_contact_phone_3_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginEnd="@dimen/light_margin"

                android:fontFamily="@font/roboto_medium_italic"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="@dimen/standard_text_size" />

            <TextView
                android:id="@+id/fragment_barcode_matrix_contact_phone_type_3_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_toEndOf="@id/fragment_barcode_matrix_contact_phone_3_text_view"

                android:fontFamily="@font/roboto_medium_italic"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="@dimen/standard_text_size" />

        </RelativeLayout>
    </RelativeLayout>

    <!-- E-Mail -->
    <RelativeLayout
        android:id="@+id/fragment_barcode_matrix_contact_email_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x_large_margin"
        android:layout_below="@id/fragment_barcode_matrix_contact_phone_layout">

        <TextView
            android:id="@+id/fragment_barcode_matrix_contact_email_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/roboto_black"
            android:text="@string/matrix_contact_mail_label"
            android:textColor="?colorAccent"
            android:textSize="@dimen/sub_title_text_size" />

        <!-- E-Mail 1 -->
        <RelativeLayout
            android:id="@+id/fragment_barcode_matrix_contact_email_1_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_barcode_matrix_contact_email_label">

            <TextView
                android:id="@+id/fragment_barcode_matrix_contact_email_1_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginEnd="@dimen/light_margin"

                android:fontFamily="@font/roboto_medium_italic"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="@dimen/standard_text_size" />

            <TextView
                android:id="@+id/fragment_barcode_matrix_contact_email_type_1_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_toEndOf="@id/fragment_barcode_matrix_contact_email_1_text_view"

                android:fontFamily="@font/roboto_medium_italic"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="@dimen/standard_text_size" />

        </RelativeLayout>

        <!-- E-Mail 2 -->
        <RelativeLayout
            android:id="@+id/fragment_barcode_matrix_contact_email_2_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_barcode_matrix_contact_email_1_layout">

            <TextView
                android:id="@+id/fragment_barcode_matrix_contact_email_2_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginEnd="@dimen/light_margin"

                android:fontFamily="@font/roboto_medium_italic"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="@dimen/standard_text_size" />

            <TextView
                android:id="@+id/fragment_barcode_matrix_contact_email_type_2_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_toEndOf="@id/fragment_barcode_matrix_contact_email_2_text_view"

                android:fontFamily="@font/roboto_medium_italic"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="@dimen/standard_text_size" />

        </RelativeLayout>

        <!-- E-Mail 3 -->
        <RelativeLayout
            android:id="@+id/fragment_barcode_matrix_contact_email_3_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_barcode_matrix_contact_email_2_layout">

            <TextView
                android:id="@+id/fragment_barcode_matrix_contact_email_3_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginEnd="@dimen/light_margin"

                android:fontFamily="@font/roboto_medium_italic"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="@dimen/standard_text_size" />

            <TextView
                android:id="@+id/fragment_barcode_matrix_contact_email_type_3_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_toEndOf="@id/fragment_barcode_matrix_contact_email_3_text_view"

                android:fontFamily="@font/roboto_medium_italic"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="@dimen/standard_text_size" />
        </RelativeLayout>

    </RelativeLayout>

    <!-- Address -->
    <RelativeLayout
        android:id="@+id/fragment_barcode_matrix_contact_address_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x_large_margin"
        android:layout_below="@id/fragment_barcode_matrix_contact_email_layout">

        <TextView
            android:id="@+id/fragment_barcode_matrix_contact_address_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/roboto_black"
            android:text="@string/matrix_contact_address_label"
            android:textColor="?colorAccent"
            android:textSize="@dimen/sub_title_text_size" />

        <TextView
            android:id="@+id/fragment_barcode_matrix_contact_address_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@id/fragment_barcode_matrix_contact_address_label"

            android:fontFamily="@font/roboto_medium_italic"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="@dimen/standard_text_size" />

    </RelativeLayout>

    <!-- Notes -->
    <RelativeLayout
        android:id="@+id/fragment_barcode_matrix_contact_notes_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x_large_margin"
        android:layout_below="@id/fragment_barcode_matrix_contact_address_layout">

        <TextView
            android:id="@+id/fragment_barcode_matrix_contact_notes_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/roboto_black"
            android:text="@string/matrix_contact_notes_label"
            android:textColor="?colorAccent"
            android:textSize="@dimen/sub_title_text_size" />

        <TextView
            android:id="@+id/fragment_barcode_matrix_contact_notes_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@id/fragment_barcode_matrix_contact_notes_label"

            android:fontFamily="@font/roboto_medium_italic"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="@dimen/standard_text_size" />

    </RelativeLayout>

</RelativeLayout>