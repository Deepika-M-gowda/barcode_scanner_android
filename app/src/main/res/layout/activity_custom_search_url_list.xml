<?xml version="1.0" encoding="utf-8"?>

<com.atharok.barcodescanner.presentation.customView.ActivityLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_custom_search_url_list_activity_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.views.activities.CustomSearchUrlListActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/activity_custom_search_url_list_empty_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/standard_margin"
            android:layout_gravity="start|top"
            android:text="@string/custom_search_urls_list_is_empty_message"
            android:visibility="gone"
            style="@style/AppTheme.TextView.Appearance.Subtitle" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/activity_custom_search_url_list_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:clipChildren="false" />

    </FrameLayout>

</com.atharok.barcodescanner.presentation.customView.ActivityLayout>